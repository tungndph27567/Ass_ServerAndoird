<div class="container">
    <div class="row col-12 col-md-8 m-auto mt-3 border border-success p-5 ">
        <h1 class="alert alert-success text-center">
            Update User
        </h1>
        <form method="post" action="/user/{{objU._id}}?_method=PUT">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" value="{{objU.email}}" id="exampleInputEmail1"
                    aria-describedby="emailHelp" required>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label">Firt Name</label>
                        <input type="text" name="firstname" class="form-control" value="{{objU.firstname}}"
                            id="exampleInputPassword1" required>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label">Last name</label>
                        <input type="text" name="lastname" class="form-control" value="{{objU.lastname}}">
                    </div>
                </div>
                <div class="row">
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" name="role" value="user" id="btnradio1" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradio1">User</label>

                        <input type="radio" class="btn-check" name="role" value="admin" id="btnradio2" autocomplete="off" checked>
                        <label class="btn btn-outline-primary" for="btnradio2">Admin</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control">
            </div>
            <div class="row m-auto">
                <button id="btn_singup" type="submit" class="btn btn-primary ">Update User</button>
            </div>
            <div class="row">

            </div>
        </form>
    </div>
</div>

<script>
    var roleU = '{{role}}';
    const btnUser = document.getElementById('btnradio1');
    const btnAdmin = document.getElementById('btnradio2');
    if (roleU == "user") {
        btnUser.checked = true;
    } else {
        btnAdmin.checked = true;
    }
</script>