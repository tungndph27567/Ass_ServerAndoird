<div class="container-fluid">
    <h2 class="mt-3 m-3">Danh Sach User</h2>
    <h1> </h1>
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li class="breadcrumb-item"><a href="#">User</a></li>

            </ol>
        </nav>
    </div>
    <div class="row mt-3 m-auto  ">

        <div class="col-12 col-lg-3 mt-1 ">
            <input type="text" name="firstname" id="firstnameUser" class="form-control" placeholder="First Name"
                aria-label="First name">
        </div>
        <div class="col-12 col-lg-3 mt-1 ">
            <input type="text" name="lastname" id="lastnameUser" class="form-control" placeholder="Last Name"
                aria-label="First name">
        </div>
        <div class="col-12 col-lg-4 mt-1">
            <input type="text" name="email" id="emailUser" class="form-control" placeholder="Email" aria-label="Last name">
        </div>
        <div class="col-2 mt-1 m-auto">
            <button class="btn btn-secondary" type="submit">Search</button>
        </div>

    </div>
    <div class="row mt-5 m-atuo">
        <div class="col-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Option</th>

                    </tr>
                </thead>
                <tbody id="myTable">
                    {{#each User}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td id="firstname">{{this.firstname}}</td>
                        <td>{{this.lastname}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <a href="/user/{{this._id}}/edit" class="btn btn-link">Edit</a>
                            <a href="" class="btn btn-link" data-id="{{this._id}}" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">Delete</a>
                        </td>
        </div>
        </tr>
        {{/each }}


        </tbody>
        </table>
    </div>
    <div class="row  ">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>



{{!-- xoa User --}}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <b class="text-center">Xoa Khoa Hoc </b>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn_delete" type="button" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>

            </div>
        </div>
    </div>
</div>
<form method="post" name="formDelete"></form>
<script>
    const exampleModal = document.getElementById('exampleModal')
    exampleModal.addEventListener('show.bs.modal', event => {
        // Button that triggered the modal
        const button = event.relatedTarget
        // Extract info from data-bs-* attributes
        const idUser = button.getAttribute('data-id');
        const formDelete = document.forms['formDelete'];
        var btn_delete = document.getElementById('btn_delete');
        btn_delete.onclick = function () {
            formDelete.action = '/user/' + idUser + '?_method=DELETE'
            formDelete.submit();
        }
    })
    $(document).ready(function () {
        $("#firstnameUser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });


</script>